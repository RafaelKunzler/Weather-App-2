---
import Image from "astro/components/Image.astro";
import search from "../assets/images/icon-search.svg";

import Today from "./Today.astro";
import InfoCard from "./InfoCard.astro";
import DailyCard from "./DailyCard.astro";
import HourlyCard from "./HourlyCard.astro";
---

<div class="pb-10">
	<div class="flex flex-col gap-12 items-center">
		<h1 class="font-bold text-5xl text-center">How's the sky looking today?</h1>
		<form action="" method="get" class="flex w-1/2 gap-4 text-neutral-100">
			<div class="relative w-full ">
				<Image
					src={search}
					alt="search"
					class="absolute left-3 top-1/2 -translate-y-1/2"
				/>
				<input
					type="search"
					name="q"
					placeholder={"Search for a place..."}
					class="w-full bg-neutral-800 rounded-lg px-3 pl-12 py-3"
				/>
			</div>
			<button class="bg-blue-500 px-4 py-2 rounded-lg"> Search </button>
		</form>
	</div>
	<div class="flex gap-12">
		<div class="w-2/3">
			<div>
				<Today />
				<div class="flex w-full gap-3 mt-4">
					<InfoCard title="Feels Like" number="18°" />
					<InfoCard title="Humidity" number="46%"/>
					<InfoCard title="Wind" number="14 km/h"/>
					<InfoCard title="Precipitation" number="0mm"/>
				</div>
				<div class="mt-6">
					<p>
						Daily forecast
					</p>
					<div class="flex gap-2 mt-3">
						<DailyCard day="Tue" imagePath="rain"/>
						<DailyCard day="Wed" imagePath="drizzle"/>
						<DailyCard day="Thu" imagePath="sunny"/>
						<DailyCard day="Fri" imagePath="cloudy"/>
						<DailyCard day="Sat" imagePath="storm"/>
						<DailyCard day="Sun" imagePath="fog"/>
						<DailyCard day="Mon" imagePath="partlyCloud"/>
					</div>
				</div>
			</div>
		</div>
		<div class="bg-neutral-800 w-1/3 px-4 py-6 rounded-lg mt-10">
			<div class="flex justify-between mb-8">
				<p>Hourly forecast</p>
				<p>Tuesday</p>
			</div>
			<div class="flex flex-col gap-3">
				<HourlyCard imagePath="cloudy" hour="3 PM" climate="20°" />
				<HourlyCard imagePath="cloudy" hour="3 PM" climate="20°" />
				<HourlyCard imagePath="cloudy" hour="3 PM" climate="20°" />
				<HourlyCard imagePath="cloudy" hour="3 PM" climate="20°" />
				<HourlyCard imagePath="cloudy" hour="3 PM" climate="20°" />
				<HourlyCard imagePath="cloudy" hour="3 PM" climate="20°" />
				<HourlyCard imagePath="cloudy" hour="3 PM" climate="20°" />
				<HourlyCard imagePath="cloudy" hour="3 PM" climate="20°" />
			</div>
		</div>

	</div>
</div>
