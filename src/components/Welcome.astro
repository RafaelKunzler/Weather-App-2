---
import Image from "astro/components/Image.astro";
import search from "../assets/images/icon-search.svg";

import Today from "./Today.astro";
import InfoCard from "./InfoCard.astro";
---

<div>
	<div class="flex flex-col gap-12 items-center">
		<h1 class="font-bold text-5xl text-center">How's the sky looking today?</h1>
		<form action="" method="get" class="flex w-1/2 gap-4 text-neutral-100">
			<div class="relative w-full ">
				<Image
					src={search}
					alt="search"
					class="absolute left-3 top-1/2 -translate-y-1/2"
				/>
				<input
					type="search"
					name="q"
					placeholder={"Search for a place..."}
					class="w-full bg-neutral-800 rounded-lg px-3 pl-12 py-3"
				/>
			</div>
			<button class="bg-blue-500 px-4 py-2 rounded-lg"> Search </button>
		</form>
	</div>
<div class="w-2/3">
	<div>
		<Today />
		<div class="flex w-full gap-3 mt-4">
			<InfoCard title="Feels Like" number="18Â°" />
			<InfoCard title="Humidity" number="46%"/>
			<InfoCard title="Wind" number="14 km/h"/>
			<InfoCard title="Precipitation" number="0mm"/>
		</div>
	</div>
</div>
</div>
